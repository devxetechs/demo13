<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mantenimiento_act_search" model="ir.ui.view">
        <field name="name">Mantenimiento - Search</field>
        <field name="model">on.mantenimiento</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="rango_inferior"/>
                <field name="rango_superior"/>
                <field name="porcentaje_descuento"/>
            </tree>
        </field>
    </record>

    <record id="mantenimiento_act" model="ir.actions.act_window">
        <field name="name">Tabla de Mantenimiento Descuento</field>
        <field name="res_model">on.mantenimiento</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="mantenimiento_cif_act_search" model="ir.ui.view">
        <field name="name">Mantenimiento CIF - Search</field>
        <field name="model">on.mantenimiento.cif</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="porcentaje_cif"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="mantenimiento_cif_act" model="ir.actions.act_window">
        <field name="name">Tabla de Mantenimiento Porcentaje CIF</field>
        <field name="res_model">on.mantenimiento.cif</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>